@using MvcSiteMapProvider.Web.Html
<!DOCTYPE html>

<html ng-app="myApp" class="ng-cloak">
<head>
    <meta name="viewport" content="width=device-width" />    
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    @System.Web.Optimization.Styles.Render("~/layout/styles")


    @RenderSection("styles", required: false)
</head>
<body class="{{isActiveRoute('/UserLogin')?'login':'page-header-fixed page-content-white page-full-width page-md'}} " ng-class="{'page-content-white': settings.layout.pageContentWhite,'page-container-bg-solid': settings.layout.pageBodySolid}" >   
    @RenderBody()
    <!-- BEGIN FOOTER -->
    <div ng-show="(!$root.isActiveRoute('/UserLogin')&&!$root.isCheckingLogin)||$root.isActiveRoute('/UserLogin')" ng-class="{'footer-login':$root.isActiveRoute('/UserLogin')}" ng-include="'tpl/footer.html'" ng-controller="FooterController" class="page-footer" style="background-color:white"> </div>
    <script type="text/javascript">
    CKEDITOR_BASEPATH = "@Url.Content("~/scripts/ckeditor/")";
    </script>
    @System.Web.Optimization.Scripts.Render("~/layout/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
